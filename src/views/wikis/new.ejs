<!DOCTYPE html>
<html>
    <head>
        <% include ../static/partials/head.ejs %>
    </head>
    <body>
        <% include ../static/partials/navbar.ejs %>

        

        <div class="container">
            <% include ../static/partials/messages.ejs %>
            <h2>Create a new wiki</h2>
            <form action="/wikis/create" method="post">
                <div class="form-group row">
                    <label for="title">Title: </label>
                    <input type="text" name="title" class="form-control" placeholder="Enter a title" aria-describedby="titleHelp">
                </div>
                <div class="form-group row">
                    <label for="body">Body: </label>
                    <textarea name="body" class="form-control" rows="10" placeholder="Make the first addition here" aria-describedby="bodyHelp"></textarea>
                </div>
                <div class="form-group btn-group-toggle" data-toggle="buttons">
                    <span>Who can see this wiki?</span>
                    <label class="btn btn-secondary">
                        <input type="radio" name="privateWiki" autocomplete="off" value="false"> Public
                    </label>
                    <label class="btn btn-secondary">
                        <input type="radio" name="privateWiki" autocomplete="off" value="true" active> Private
                    </label>
                </div>
                <div class="form-group row">
                    <button type="submit" class="btn btn-secondary btn-block">Submit</button>
                </div>
                
            </form> 
        </div>
        
        <% include ../static/partials/baseScripts.ejs %>
    </body>
</html>